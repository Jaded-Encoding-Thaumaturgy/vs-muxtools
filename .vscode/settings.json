{
    "[python]": {
        "editor.formatOnType": false,
        "editor.formatOnSave": true,
        "editor.defaultFormatter": "charliermarsh.ruff"
    },
    "[toml]": {
        "editor.formatOnType": false,
        "editor.formatOnSave": true,
    },
    "ruff.lint.enable": true,
    "ruff.lint.args": [
        "--config",
        "./pyproject.toml"
    ],
    "ruff.format.args": [
        "--config",
        "./pyproject.toml"
    ]
}